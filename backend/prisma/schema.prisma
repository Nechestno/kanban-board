// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) // Строковый идентификатор
  login     String   @unique
  password  String
  name      String
  avatarUrl String? // Ссылка на аватарку пользователя
  boards    Board[] // Связь с досками
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Board {
  id         String     @id @default(uuid()) // Строковый идентификатор
  name       String
  userId     String
  user       User       @relation(fields: [userId], references: [id])
  categories Category[] // Связь с категориями
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model Category {
  id        String   @id @default(uuid()) // Строковый идентификатор
  name      String
  color     String
  boardId   String
  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
  tasks     Task[] // Связь с задачами
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id          String   @id @default(uuid()) // Строковый идентификатор
  workTitle   String // Наименование работы (фича, баг и т.д)
  title       String
  description String?
  dueDate     DateTime
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
